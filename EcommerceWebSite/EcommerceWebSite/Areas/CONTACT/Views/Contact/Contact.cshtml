@using Data.Models
@model Talep
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}
<div class="alert alert-info">  @TempData["mesaj"]</div>
<section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__text">
                        <div class="section-title">
                            <span>Information</span>
                            <h2>Bizimle İletişime Geçin</h2>
                            <p>Görüşleriniz ve talepleriniz bizim için önemli</p>
                        </div>
                        <ul>
                            <li>
                                <h4>Türkiye</h4>
                                <p>195 E Parker Square Dr, Parker, CO 801 <br />+90 545 774 28 82</p>
                            </li>
                            
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                        <form action="/iletisim" method="post">
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                    @Html.TextBoxFor(i=>i.GondericiEmail,new{@placeholder="Mail"})
                                    @Html.ValidationMessageFor(i=>i.GondericiEmail)
                                </div>
                                <div class="col-lg-6">
                                   @Html.TextBoxFor(i=>i.Konu,new{@placeholder="Konu"})
                                    @Html.ValidationMessageFor(i=>i.Konu)
                                </div>
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(i=>i.Description,new{@placeholder="Mesajınız"})
                                     @Html.ValidationMessageFor(i=>i.Description)
                                    <button type="submit" class="site-btn">Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

